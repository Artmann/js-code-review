<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-full lg:w-1/3 mx-auto' }) do |f| %>
  <h2 class="mb-8">Sign up</h2>
  
  <% if resource.errors.full_messages.size > 0 %>
  <div class="mt-8 bg-red-lighter px-4 py-2 leading-normal border">
    <% resource.errors.full_messages.each do |msg| %>
      <p>
        <%= msg %>.
      </p>
    <% end %>
  </div>
  <% end %>

  <div class="mt-8">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="mt-8">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>

  <div class="mt-8">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>

  <div class="mt-8">
    <%= f.label :name, 'Your name' %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="mt-8">
    <%= f.label :skill_level, "I'm a" %>
    <div class="flex justify-between">
      <div><%= f.radio_button :skill_level, 'Junior Developer', checked: true %> Junior Developer</div>
      <div><%= f.radio_button :skill_level, 'Senior Developer' %> Senior Developer</div>
    </div>
  </div>

  <div class="my-8 text-right">
    <%= f.submit "Sign up", class: 'button' %>
  </div>
<% end %>
