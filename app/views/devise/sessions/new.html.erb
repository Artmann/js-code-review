<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'w-full lg:w-1/3 mx-auto px-4 lg:mt-8 lg:p-8 lg:border lg:shadow' }) do |f| %>
  <h2>Sign in</h2>

  <div class="mt-8">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mt-8">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="mt-4">
    <div class="flex">
      <%= f.check_box :remember_me, class: 'mr-2' %>
      <%= f.label :remember_me %>
    </div>
  </div>

  <div class="mt-8 text-right">
    <%= f.submit "Sign in", class: 'button' %>
  </div>

  <div class="mt-8 flex justify-between">
    <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-grey-darker no-underline' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-grey-darker no-underline' %>
  </div>

<% end %>