<!DOCTYPE html>
<html>

  <%= render 'layouts/head' %>

  <body>
    <div class="bg-teal-dark text-white">
      <nav class="container mx-auto flex justify-between items-center h-16 px-4 lg:px-8">
        <%= link_to("JS Code Review", :root, class: 'no-underline text-white text-lg') %>
        <div class="hidden lg:flex">
          <%= link_to('Submit your code', :new_review_request, class: 'text-white no-underline block mr-4 hover:underline') %>
          <a href="#" class="text-white no-underline block mr-4 hover:underline">Post a review</a>
          <% if user_signed_in? %>
            <a href="#" class="text-white no-underline block mr-4 hover:underline">My profile</a>
            <%= link_to('Sign out', :destroy_user_session, method: :delete, class: 'text-white no-underline block mr-4 hover:underline') %>
          <% else %>
            <%= link_to('Sign in', :new_user_session, class: 'text-white no-underline block mr-4 hover:underline') %>
          <% end %>
        </div>
      </nav>
    </div>

    <div class="container mx-auto px-4 py-8">
      <%= yield %>
    </div>

  </body>
</html>
